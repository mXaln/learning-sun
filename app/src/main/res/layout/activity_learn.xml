<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:elevation="1dp"
        android:layout_height="match_parent"
        tools:context=".ui.activities.learn.LearnActivity">

    <androidx.appcompat.widget.Toolbar
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/toolbar"
            android:elevation="1dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:layout_width="match_parent"
            app:title="@string/learn"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:elevation="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:id="@+id/space"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cards_left_30"
            android:textSize="20sp"
            android:textStyle="bold"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            android:id="@+id/cards_left_tv"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:elevation="1dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/cards_left_tv"
            android:id="@+id/timeline_progress"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lean_ll"
            android:visibility="visible"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/timeline_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/study_learn"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:elevation="1dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                android:id="@+id/study_tv"/>

        <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/number_learn"
                android:text="0"
                android:elevation="1dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp"
                android:gravity="center"
                android:id="@+id/learn_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/card_stack_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            android:visibility="visible"
            android:layout_marginVertical="@dimen/_10dp"
            android:clipToPadding="false"
            android:translationZ="4dp"
            android:elevation="10dp"
            android:layout_marginStart="@dimen/_30sp"
            android:layout_marginEnd="@dimen/_30sp"
            app:layout_constraintBottom_toTopOf="@id/button_container"
            app:layout_constraintTop_toBottomOf="@id/lean_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </com.yuyakaido.android.cardstackview.CardStackView>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/_50sp"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/button_container">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/skip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16dp"
                android:elevation="1dp"
                android:layout_marginStart="@dimen/_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rewind_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_30sp"
                android:src="@drawable/skip_red_24dp"
                app:backgroundTint="@android:color/white"
                app:fabSize="auto"
                app:rippleColor="#22ED7563"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/rewind_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/_10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/refresh"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="#225BC9FA"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/rewind_button"
                android:src="@drawable/like_green_24dp"
                app:backgroundTint="@android:color/white"
                android:layout_marginVertical="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_16dp"
                android:elevation="1dp"
                app:layout_constraintStart_toEndOf="@+id/rewind_button"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_30sp"
                app:fabSize="auto"
                app:rippleColor="#226FE2B3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:id="@+id/review_container"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/timeline_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/firework"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/firework_iv"
                android:layout_marginTop="@dimen/_20sp"
                android:elevation="1dp"/>

        <TextView
                android:id="@+id/review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="1dp"
                android:layout_marginTop="@dimen/_20sp"
                android:layout_marginStart="@dimen/_20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_party"
                android:elevation="1dp"
                android:layout_marginTop="@dimen/_20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/review_iv"/>

        <at.grabner.circleprogress.CircleProgressView
                android:layout_width="@dimen/_100sp"
                android:layout_height="@dimen/_100sp"
                android:layout_marginTop="@dimen/_30sp"
                app:cpv_autoTextSize="false"
                app:cpv_textSize="@dimen/_25sp"
                app:cpv_barColor="@color/green_light"
                app:cpv_barWidth="17dp"
                app:cpv_innerContourSize="0dp"
                app:cpv_maxValue="100"
                app:cpv_outerContourSize="0dp"
                app:cpv_rimColor="@color/orange"
                app:cpv_rimWidth="17dp"
                app:cpv_seekMode="true"
                app:cpv_showUnit="true"
                app:cpv_spinColor="@color/azure_blue"
                app:cpv_textColor="@color/dark_gray"
                app:cpv_textScale="1"
                app:cpv_unit="%"
                app:cpv_roundToBlock="false"
                android:elevation="1dp"
                app:cpv_unitSize="@dimen/_20sp"
                app:cpv_unitToTextScale="0.8"
                app:cpv_unitTypeface="fonts/roboto_regular.ttf"
                app:cpv_unitColor="@color/celestial_blue"
                app:cpv_unitPosition="bottom"
                app:cpv_unitScale="1"
                app:cpv_value="100"
                android:id="@+id/review_progress"
                app:layout_constraintTop_toBottomOf="@id/review_tv"
                app:layout_constraintStart_toStartOf="@id/review_tv"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/know"
                android:textColor="@color/green_light"
                android:textSize="@dimen/_20sp"
                android:elevation="1dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/review_progress"
                app:layout_constraintStart_toEndOf="@id/review_progress"
                android:layout_marginStart="@dimen/_20sp"
                android:id="@+id/know_tv"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/still_learning"
                android:elevation="1dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                android:layout_marginVertical="@dimen/_10dp"
                app:layout_constraintTop_toBottomOf="@id/know_tv"
                app:layout_constraintStart_toStartOf="@id/know_tv"
                android:id="@+id/still_learn_tv"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_left"
                android:elevation="1dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                android:layout_marginVertical="@dimen/_10dp"
                app:layout_constraintTop_toBottomOf="@id/still_learn_tv"
                app:layout_constraintStart_toStartOf="@id/know_tv"
                android:id="@+id/terms_left_tv"/>

        <TextView
                android:id="@+id/know_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:background="@drawable/learn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="1dp"
                android:paddingHorizontal="@dimen/_20sp"
                android:paddingVertical="3sp"
                app:layout_constraintTop_toTopOf="@id/know_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_16dp"/>

        <TextView
                android:id="@+id/still_learn_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:elevation="1dp"
                android:textStyle="bold"
                android:background="@drawable/study"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/_20sp"
                android:paddingVertical="3sp"
                app:layout_constraintTop_toTopOf="@id/still_learn_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_16dp"/>

        <TextView
                android:id="@+id/terms_left_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:background="@drawable/terms"
                android:elevation="1dp"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/_20sp"
                android:paddingVertical="3sp"
                app:layout_constraintTop_toTopOf="@id/terms_left_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_16dp"/>

        <Button
                android:layout_marginTop="@dimen/_50sp"
                android:layout_marginHorizontal="@dimen/_50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keep_learn_btn"
                android:background="@drawable/button_background"
                android:textStyle="bold"
                android:elevation="1dp"
                android:textColor="@color/white"
                android:text="@string/keep_learning"
                app:layout_constraintTop_toBottomOf="@id/review_progress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginHorizontal="@dimen/_50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reset_learn_btn"
                android:background="@drawable/button_sign_in"
                android:textStyle="bold"
                android:elevation="1dp"
                android:textColor="@color/black"
                android:text="@string/reset_learning"
                app:layout_constraintTop_toBottomOf="@id/keep_learn_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>