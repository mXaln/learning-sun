<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.lesson.LessonActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activities.lesson.LessonActivity"
            android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                app:navigationIcon="@drawable/ic_arrow_back"
            android:id="@+id/toolbar">

            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_logo"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10dp"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_ll"
                android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/lesson_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson_name"
                        android:textSize="@dimen/_25sp"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:id="@+id/term_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sp"
                        android:text="@string/cards_count"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/lesson_name"
                        app:layout_constraintTop_toTopOf="@id/lesson_name"
                        app:layout_constraintBottom_toBottomOf="@id/lesson_name"
                        android:layout_marginStart="@dimen/_16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16sp"
                android:layout_marginHorizontal="@dimen/_16sp"
                android:background="@color/white"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="8dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sp"
                        android:elevation="@dimen/_8sp"
                        android:background="@drawable/radius"
                        android:id="@+id/review_cl">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_learn"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/flashcards_iv"
                            android:contentDescription="@string/app_name"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learn_symbols"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_8sp"
                            app:layout_constraintTop_toTopOf="@id/flashcards_iv"
                            app:layout_constraintStart_toEndOf="@id/flashcards_iv"
                            android:id="@+id/flashcards_tv"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flashcards_description"
                            android:textSize="@dimen/_12sp"
                            android:layout_marginStart="@dimen/_8sp"
                            app:layout_constraintTop_toBottomOf="@id/flashcards_tv"
                            app:layout_constraintStart_toEndOf="@id/flashcards_iv"
                            android:id="@+id/flashcards_description_tv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="8dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sp"
                        android:elevation="@dimen/_8sp"
                        android:background="@drawable/radius"
                        android:id="@+id/learn_cl">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_test"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/learn_iv"
                            android:contentDescription="@string/app_name"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_symbols"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_8sp"
                            app:layout_constraintTop_toTopOf="@id/learn_iv"
                            app:layout_constraintStart_toEndOf="@id/learn_iv"
                            android:id="@+id/learn_tv"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/focus_on_learning"
                            android:textSize="@dimen/_12sp"
                            android:layout_marginStart="@dimen/_8sp"
                            app:layout_constraintTop_toBottomOf="@id/learn_tv"
                            app:layout_constraintStart_toEndOf="@id/learn_iv"
                            android:id="@+id/learn_description_tv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sp"
                    android:elevation="@dimen/_8sp"
                    android:background="@drawable/radius"
                    android:id="@+id/test_cl">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_sentences"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/test_iv"
                        android:contentDescription="@string/app_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_sentences"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_8sp"
                        app:layout_constraintTop_toTopOf="@id/test_iv"
                        app:layout_constraintStart_toEndOf="@id/test_iv"
                        android:id="@+id/test_tv"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/focus_on_learning"
                        android:textSize="@dimen/_12sp"
                        android:layout_marginStart="@dimen/_8sp"
                        app:layout_constraintTop_toBottomOf="@id/test_tv"
                        app:layout_constraintStart_toEndOf="@id/test_iv"
                        android:id="@+id/test_description_tv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>