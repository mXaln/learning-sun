<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#68EABCBC" />
            <corners android:radius="@dimen/_16dp" />
            <stroke android:width="@dimen/_2dp" android:color="#BFAE0F0F" />
        </shape>
    </item>

    <item android:top="-12dp" android:right="-12dp" android:left="-12dp" android:bottom="-12dp">
        <rotate
            android:fromDegrees="-45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/_1dp"
                    android:color="#BFAE0F0F" />
            </shape>
        </rotate>
    </item>

    <item android:top="-12dp" android:right="-12dp" android:left="-12dp" android:bottom="-12dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/_1dp"
                android:color="#BFAE0F0F" />
            </shape>
        </rotate>
    </item>
</layer-list>
